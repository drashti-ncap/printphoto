<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Usefull.EditRegDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBarStyle.Event"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">


                <TextView
                    android:id="@+id/title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pnuregular"
                    android:gravity="center"
                    android:text="@string/edit"
                    android:textColor="@color/colortitle1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title1"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/title"
                    android:fontFamily="@font/pnuregular"
                    android:gravity="center"
                    android:text="@string/account"
                    android:textColor="@color/print_colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/id_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:src="@drawable/ic_action_back" />

            <ImageView
                android:id="@+id/id_ll_reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:src="@drawable/ic_reset" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/personal_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:src="@drawable/ic_print_photo" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/id_ll_print_photo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/rect">


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/ic_print_user" />

                        <EditText
                            android:id="@+id/id_ed_fname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/pnuregular"
                            android:hint="@string/first_name"

                            android:paddingRight="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/headertext" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/id_ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/id_ll_firstname">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/rect">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/ic_print_user" />


                        <EditText
                            android:id="@+id/id_ed_lname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/pnuregular"
                            android:hint="@string/last_name"

                            android:paddingRight="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/headertext" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/id_ll_firstname">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/rect">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:src="@drawable/ic_email_id" />


                        <EditText
                            android:id="@+id/id_ed_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/pnuregular"
                            android:hint="@string/email_id"
                            android:inputType="textEmailAddress"
                            android:paddingRight="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/headertext" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/id_ll_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/id_ll_firstname">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/rect">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/ic_mobile_no" />

                        <EditText
                            android:id="@+id/id_ed_mobile2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/pnuregular"
                            android:gravity="right|center"
                            android:hint="@string/mobile_no_optional"
                            android:inputType="phone"
                            android:paddingRight="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/headertext" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_ll_11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/id_ll_firstname">

                    <LinearLayout
                        android:id="@+id/ll_sp_currency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/rect">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:src="@drawable/iv_currency" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/sp_currency"
                                style="@style/spinnerItemStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/transparent_background"
                                android:textSize="@dimen/headertext" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/sp_arrow" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/llChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/colortitle1"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:drawableLeft="@drawable/ic_user_update"
                                    android:fontFamily="@font/pnuregular"
                                    android:gravity="center"
                                    android:scaleType="fitXY"
                                    android:text="Change Password"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/headertext"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/print_colorPrimaryDark"
                        app:cardCornerRadius="7dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/pnuregular"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Add Address Details"
                                android:textColor="@color/white"
                                android:textSize="@dimen/headertext"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/id_ll_home_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/id_ll_3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_pincode" />

                                    <EditText
                                        android:id="@+id/id_ed_h_pincode"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="Pincode"
                                        android:inputType="phone"
                                        android:maxLength="6"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_4"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_home_no" />

                                    <EditText
                                        android:id="@+id/id_ed_h_homeno"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="Home no,Building"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_5"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_street" />

                                    <EditText
                                        android:id="@+id/id_ed_h_street"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="Street, Area"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_6"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_landmark" />

                                    <EditText
                                        android:id="@+id/id_ed_h_landmark"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="Landmark"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_7"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_city" />


                                    <EditText
                                        android:id="@+id/id_ed_h_city"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="City"

                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_8"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_state" />

                                    <EditText
                                        android:id="@+id/id_ed_h_state"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="State"

                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/id_ll_9"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_print_photo"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_print_country" />

                                    <EditText
                                        android:id="@+id/id_ed_h_country"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/pnuregular"
                                        android:hint="Country"

                                        android:paddingRight="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/headertext" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/colortitle1"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/pnuregular"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:text="Reset"
                            android:textColor="@color/white"
                            android:textSize="@dimen/headertext"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_ll_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/print_colorPrimary"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/ic_user_update" />

                        <TextView
                            android:id="@+id/update"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/pnuregular"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:text="@string/update_profile"
                            android:textColor="@color/white"
                            android:textSize="@dimen/headertext"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

