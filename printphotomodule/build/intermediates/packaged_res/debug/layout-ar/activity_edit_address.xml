                            <!--android:layout_marginLeft="@dimen/_6sdp"-->
                            <!--android:src="@drawable/ic_landmark" />-->

                            <!--<EditText-->
                            <!--android:id="@+id/id_ed_h_landmark"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_marginLeft="@dimen/_5sdp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:background="@android:color/transparent"-->
                            <!--android:hint="Landmark"-->
                            <!--android:inputType="textCapWords"-->
                            <!--android:paddingRight="@dimen/_5sdp"-->
                            <!--android:singleLine="true"-->
                            <!--android:textSize="@dimen/_14sdp" />-->


                            <!--</LinearLayout>-->
                            <!--</LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_mobile_no"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_print_country" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:id="@+id/sp_country"
                                            style="@style/spinnerItemStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:layout_marginBottom="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:background="@drawable/transparent_background"
                                            android:textSize="@dimen/headertext" />

                                        <ImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:padding="@dimen/_5sdp"
                                            android:src="@drawable/sp_arrow" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_state"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_mobile_no"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_state" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:id="@+id/sp_states"
                                            style="@style/spinnerItemStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent" />

                                        <ImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:padding="@dimen/_5sdp"
                                            android:src="@drawable/sp_arrow" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/id_ll_mobile_no"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rect">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:src="@drawable/ic_city" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:id="@+id/sp_district"
                                            style="@style/spinnerItemStyle"

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:singleLine="true"
                                            android:textSize="@dimen/headertext" />

                                        <ImageView
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:padding="@dimen/_5sdp"
                                            android:src="@drawable/sp_arrow" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/id_ll_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:cardBackgroundColor="@color/colortitle1"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pnuregular"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="@string/save_address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/headertext"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>