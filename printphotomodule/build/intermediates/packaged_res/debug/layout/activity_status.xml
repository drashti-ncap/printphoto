<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_success"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:gravity="center"
                android:text="@string/payment_successfull"
                android:textColor="@color/black"
                android:textSize="@dimen/_26sdp" />

            <ImageView
                android:id="@+id/iv_gif"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_95sdp"
                android:layout_below="@+id/tv_success"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/done" />

            <TextView
                android:id="@+id/tv_amnt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/iv_gif"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_55sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_34sdp" />


            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_below="@+id/tv_amnt"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />


            <TextView
                android:id="@+id/tv_transaction_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_below="@+id/tv_order_id"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_mob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tv_transaction_id"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_55sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tv_mob"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginRight="@dimen/_55sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_info_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:drawableLeft="@drawable/ic_arrow_status"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/your_order_will_be_confirm_within_48_hours"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tv_working"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/tv_info_share"
                    android:drawableLeft="@drawable/ic_arrow_status"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/delivery_within_15_working_days_after_order_n_confirmation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tv_prepaid"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/tv_working"
                    android:drawableLeft="@drawable/ic_arrow_status"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="PRINTED KEYCHAIN will be available for free while buying Mobile Cover."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/continue_shopping"
        android:textColor="@color/white" />

</LinearLayout>
