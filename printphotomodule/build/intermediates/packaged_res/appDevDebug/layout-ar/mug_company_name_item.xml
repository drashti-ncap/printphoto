<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp">

        <ImageView
            android:id="@+id/iv_mug"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155sdp"
            android:layout_margin="@dimen/_3sdp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:layout_below="@+id/iv_mug"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/pnuregular"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="apple"
                        android:textColor="@color/background"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_share_pro"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/iv_model_share" />


                        <ImageView
                            android:id="@+id/iv_disp_video"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_video_disp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_select"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="0.6"
                        android:background="@color/colorPrimary"
                        android:fontFamily="@font/pnuregular"
                        android:gravity="center"
                        android:text="@string/select"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/pnuregular"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="apple"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/iv_arrow_mug"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/text"
                        android:layout_gravity="bottom|center"
                        android:layout_weight="0.1"
                        android:src="@drawable/sp_arrow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left|center"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:gravity="left|center">

                            <TextView
                                android:id="@+id/id_dummy_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/strike"
                                android:fontFamily="@font/pnuregular"
                                android:gravity="center"
                                android:text="250"
                                android:textColor="@color/dummyprice"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/pnuregular"
                            android:gravity="right|center"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="apple"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/ll_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/pnuregular"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Description"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_arrow_mug_rev"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_below="@+id/ll_new"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/sp_arrow" />
        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>