<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_blue_tablerow_bottomborder_new"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                android:id="@+id/pro_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:indeterminateDrawable="@drawable/progress"
                android:visibility="visible"></ProgressBar>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pnuregular"
                android:gravity="top|right|center"
                android:singleLine="true"
                android:text="Acer Liquid Jade Z530-3d Phone Case"
                android:textColor="@color/black"

                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pnuregular"
                android:gravity="top|right|center"
                android:text="Price : â‚¹500"

                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pnuregular"
                android:gravity="top|right|center"
                android:text="Quantity : 2"

                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>