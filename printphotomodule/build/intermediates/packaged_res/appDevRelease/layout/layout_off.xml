<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="1000px"
        android:layout_height="565px"
        android:scaleType="fitXY"
        android:src="@drawable/prepaid_offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_offer_amount"
        android:layout_width="0dp"
        android:layout_height="186px"
        android:gravity="center"
        android:text="₹100 off"
        android:textColor="@color/black"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linear_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/iv_banner"
        app:layout_constraintStart_toStartOf="@+id/iv_banner"
        app:layout_constraintTop_toBottomOf="@+id/iv_banner">

        <TextView
            android:id="@+id/tv_tamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Pay by card get ₹100 off"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_hindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="कार्ड द्वारा भुगतान करें ₹१०० छूट प्राप्त करें"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_kannad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="कार्ड द्वारा भुगतान करें ₹१०० छूट प्राप्त करें"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/linear_hint"
        app:layout_constraintStart_toStartOf="@+id/linear_hint"
        app:layout_constraintTop_toBottomOf="@+id/linear_hint">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorbutton"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="₹100 \nMake Payment"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_5sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_cod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorbutton"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_cod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="₹140 \n Cash On Delivery"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>